/* pages/controler/controler.wxss */
page{
	background-color: #FFF;
	color: #3E3849;
}
.wx-slider-handle{
	 /* width: 30rpx !important;
	height: 30rpx !important;  */
	background-color: #FF3489 !important;
	/* position: relative;
	top: 17rpx !important;
	left: 16rpx; */
	box-shadow: 0;

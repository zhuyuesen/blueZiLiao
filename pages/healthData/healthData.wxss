/* pages/healthData/healthData.wxss */
page{
	background-color: #F9F9FE;
}
.selectBox{
	margin-top: 20rpx;
}
.selectBox .option text{
	font-size: 28rpx;
	color: #FE2851;
	border-color: #FE2851;
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
}
.selectBox .option .active{
	background-color: #FE2851;
	color: #fff;
}

.mainContent{
	width: calc(100% - 16rpx * 2);
	box-sizing: border-box;
	padding: 18rpx;
	margin: 16rpx;
	border-radius: 16rpx;
	background-color: #fff;
}
.mainContent .header{
	justify-content: space-between;
	padding-bottom: 50rpx;
}
.mainContent .section .title{
	font-weight: bold;
	font-size: 32rpx;
}
.mainContent .header .unit{
	font-weight: normal;
	font-size: 20rpx;
	display: inline-block;
	margin-left: 10rpx;
}
.mainContent .header .dataDate{
	color: #8F8E94;
	font-size: 24rpx;
}
.dataIntro{
	justify-content: space-between;
	font-size: 28rpx;
	line-height: 48rpx;
	padding: 10rpx 0;
	margin-top: 10rpx;
}
.dataIntro .introIcon{
	width: 48rpx;
	height: 48rpx;
	margin-right: 10rpx; 
	margin-bottom: -10rpx;
}
.introLabel{
	color: #8F8E94;
	font-size: 24rpx;
	padding-top: 10rpx;
	padding-left: 58rpx;
}
.menu{
	padding-left: 16rpx;
	padding-right: 16rpx;
}
.menu .menuItem{
	background-color: #fff;
	border-radius: 16rpx;
	padding-left: 18rpx;
	padding-right: 22rpx;
}

.canvas {
    width: 100%;
    height: 200px;
}

.table{
	display: table;
	width: 600rpx;
	margin: 0 auto;
	text-align: center;
	font-size: 32rpx;
	border-collapse: collapse;
	margin-bottom: 20rpx;
}
.table .row{
	display: table-row;
}
.table .col{
	display: table-cell;
	border: 1rpx solid #ccc;
}